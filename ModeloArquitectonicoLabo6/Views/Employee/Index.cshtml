@model IEnumerable<ModeloArquitectonicoLabo6.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h4>Registrar Empleado</h4>
<hr />


<table class="table table-hover">
    <thead>
        <tr>
            <th>
                Nombre Completo
            </th>
            <th>
                Codigo Empleado
            </th>
            <th>
                Posicion
            </th>
            <th>
                Localizacion de oficina
            </th>
            <th>
                <a asp-controller="Employee" asp-action="AddOrEdit" class="btn btn-outline-success"><i class="far fa-plus-square"></i> Añadir Empleados</a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmpCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OfficeLocation)
            </td>
            <td>
                <a asp-controller="Employee" asp-action="AddOrEdit" asp-route-id="@item.EmployeeId"><i class="fa fa-marker fa-lg"></i></a>
                <a asp-controller="Employee" asp-action="Delete" asp-route-id="@item.EmployeeId" class="text-danger ml-1" onclick="return confirm('Esta seguro de borrar este empleado?')"><i class="fa fa-trash-alt fa-lg"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
